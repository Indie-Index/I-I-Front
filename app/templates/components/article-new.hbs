<label for="title">Title</label>
{{input type="text"
        placeholder="title"
        value=article.title}}
{{#if article}}<h3>article loaded  {{article.title}}</h3>
{{else}}<h3>article not loaded</h3>
{{/if}}


<button class="btn btn-xs" {{action 'save' on='submit'}}>Save Article</button>
<button class="btn btn-xs btn-danger" {{action 'cancel'}}>Cancel</button>
